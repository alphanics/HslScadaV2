<UserControl x:Class="HslScada.Controls.HMISwitchButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HslScada.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Viewbox>
        <Canvas Width="100" Height="100">
            <!--Step 1-->
            <Path x:Name="Path1" Width="100" Height="100" Canvas.Left="0" Canvas.Top="0" Stretch="Fill" StrokeThickness="0" 
                  StrokeMiterLimit="2.75" Stroke="DarkGray" 
                  Data="M 337.713,183.353L 292.307,73.3283L 182.686,27.7566L 73.0468,73.3283L 27.6411,183.353L 73.0468,293.378L 182.686,338.95L 292.307,293.378L 337.713,183.353L 337.732,183.353" RenderTransformOrigin="0.5,0.5">
